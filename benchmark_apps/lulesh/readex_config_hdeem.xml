    	</metrics>     -->
        <searchAlgorithm>
            <name>exhaustive</name>
            <samples>10</samples>
            <keep>2</keep>
        </searchAlgorithm>
    </periscope>
<!--  This section defines which substrate plugin to be used for readex_tuning plugin -->
